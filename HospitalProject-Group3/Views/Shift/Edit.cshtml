@model HospitalProject_Group3.Models.ViewModels.UpdateShift
@{
    ViewBag.Title = "Edit";
}

<h2>Update Shift</h2>
<form action="/Shift/Update/@Model.SelectedShift.ShiftID" method="POST" enctype="multipart/form-data">
    <div style="display:none;">
        @* Pass through the Shift ID *@
        <input type="text" name="ShiftID" value="@Model.SelectedShift.ShiftID" />
    </div>

    <div>
        <label>Shift Day:</label>

        <select name="ShiftDay">
            @foreach (var shiftDay in Model.ShiftDayOptions)
            {
                string selected = "";
                if (shiftDay == Model.SelectedShift.ShiftDay.ToString())
                {
                    selected = "selected";
                }
                <option value="@shiftDay" @selected>@shiftDay</option>

            }
        </select>
    </div>

    <div>
        <label>Shift Time:</label>

        <select name="ShiftTime">
                @foreach (var shiftTime in Model.ShiftTimeOptions)
                {
                    string selected = "";
                    if (shiftTime == Model.SelectedShift.ShiftTime.ToString())
                    {
                        selected = "selected";
                    }
                    <option value="@shiftTime" @selected>@shiftTime</option>

                }
        </select>
    </div>

    <div>
        <input type="submit" value="Update Shift" />

    </div>
</form>
<div style="margin-top:50px;">
    <a class="navlink" href="/Shift/Details/@Model.SelectedShift.ShiftID">Back to The Shift's Detail</a>
</div>

